{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="mb-4">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control bg-dark text-light border-secondary'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control bg-dark text-light border-secondary', 'rows': 4}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="mb-4">
        <div class="form-check">
            {{ form_widget(form.status, {'attr': {'class': 'form-check-input bg-dark border-secondary'}}) }}
            {{ form_label(form.status, 'Tâche terminée', {'label_attr': {'class': 'form-check-label'}}) }}
        </div>
        {{ form_errors(form.status) }}
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a href="{{ path('app_task_index') }}" class="btn btn-outline-light">Annuler</a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2 me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}